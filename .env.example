
# API Keys for Real Text Analysis Services
# Copy this file to .env.local and add your actual API keys
# NEVER commit your actual API keys to version control

# Google Cloud Natural Language API
VITE_GOOGLE_NLP_API_KEY=your_google_nlp_api_key_here

# Google Jigsaw Perspective API
VITE_PERSPECTIVE_API_KEY=your_perspective_api_key_here

# Google Safe Browsing (Web Risk) API
VITE_WEB_RISK_API_KEY=your_web_risk_api_key_here

# IPQuality Score API
VITE_IPQS_API_KEY=your_ipqs_api_key_here

# Arya.ai Phishing Detection API
VITE_ARYA_API_KEY=your_arya_api_key_here

# Gemini 2.5 Flash/Pro API
VITE_GEMINI_API_KEY=your_gemini_api_key_here

# Google Cloud Project Configuration
VITE_GOOGLE_CLOUD_PROJECT_ID=your_project_id_here

# Frontend environment variables
VITE_API_BASE_URL=https://your-serverless-function-url.com/api

# Google Cloud Pub/Sub Configuration (for production)
VITE_PUBSUB_TOPIC_ANALYSIS=content-analysis
VITE_PUBSUB_TOPIC_RESULTS=analysis-results

# Circuit Breaker Configuration
VITE_CIRCUIT_BREAKER_FAILURE_THRESHOLD=5
VITE_CIRCUIT_BREAKER_RESET_TIMEOUT=60000

# Retry Configuration
VITE_RETRY_MAX_ATTEMPTS=3
VITE_RETRY_BASE_DELAY=1000
